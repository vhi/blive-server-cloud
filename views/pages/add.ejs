<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>

<script>
$( document ).ready(function() {

  $('#btnSave').click(function() {
  	var idToken  = $('#idToken').val();
  	var ctrlName = $('#ctrlName').val();
  	var ctrlType = $('#ctrlType').val();
  	var ctrlIp   = $('#ctrlIp').val();
  	// alert(ctrlIp);
  	// var ctrlName = $('#ctrlName').val();
  	// /addCrtl/:name/:type/:ip
  	$("#loader").load("http://192.168.168.78:666/addCrtl/"+idToken+"/"+ctrlName+"/"+ctrlType+"/"+ctrlIp);
  });

});
</script>

</body>
</html>